@model Finance.Models.ViewModel.SpendingEditViewModel

<form method="post" asp-action="Edit">
    <div class="border p-4 mt-4 roboto-regular">
        <div class="row pb-3">
            <h2>Edit Spending</h2>
        </div>
        
        <input type="hidden" asp-for="@Model.PreAmount" value="@Model.PreAmount"/>
        @Html.HiddenFor(model => model.SpendingFromDb.Id)
        <fieldset class="mb-4">
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label fs-5">Date and Time</label>
                <div class="col-sm-4">
                    <input asp-for="@Model.SpendingFromDb.Time" type="datetime-local" class="form-control" />
                    <span asp-validation-for="@Model.SpendingFromDb.Time" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <div class="mb-3 row">
            <label for="Description" class="col-sm-2 col-form-label fs-5">Description</label>
            <div class="col-sm-10">
                <select asp-for="@Model.SpendingFromDb.Description" asp-items="Html.GetEnumSelectList<Finance.Models.Models.SpendingCategory>()" class="form-control" id="Description">
                    <option value="">Select a category</option>
                </select>
                <span asp-validation-for="@Model.SpendingFromDb.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label for="Amount" class="col-sm-2 col-form-label fs-5">Amount</label>
            <div class="col-sm-10">
                <input asp-for="@Model.SpendingFromDb.Amount" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="@Model.SpendingFromDb.Amount" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-secondary form-control border">Back To List</a>
            </div>
        </div>
    </div>
</form>
