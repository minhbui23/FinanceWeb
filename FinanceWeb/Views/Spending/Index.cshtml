@model List<Spending>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="title-group mb-3">
	<h1 class="h2 mb-0">Wallet</h1>
</div>

<div class="row my-4">
        <div class="col-lg-12 col-12">
            <div class="custom-block bg-white">
                <div class="custom-block d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Account Activities</h5>

                    <a class="btn btn-custom-add_new"  asp-action="Create">
                            <i class="bi bi-bag-plus-fill"></i> Add New
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="account-table table">
                        <thead>
                            <tr>
								<th scope="col">Date</th>

								<th scope="col">Time</th>

								<th scope="col">Description</th>

								<th scope="col">Amount</th>								

								<th scope="col" class="text-center">More</th>


                            </tr>
                        </thead>
						<tbody>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                var user = await UserManager.GetUserAsync(User);
                                if (user != null)
                                {
                                    @foreach (var spending in Model)
                                    {
                                        <tr>
                                            <td>@spending.Time.ToString("dd/MM/yyyy")</td>
                                            <td>@spending.Time.ToString(@"hh\:mm tt")</td>
                                            <td>@spending.Spending_Category?.Name</td>
                                            <td>-$@spending.Amount</td>                                            
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-custom-edit" asp-action="Edit" asp-route-Id="@spending.Id" class="btn mx-2" style="font-size: 20px;">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>

                                                    <a class="btn btn-custom-delete" asp-action="Delete" asp-route-Id="@spending.Id" class="btn mx-2" style="font-size: 20px;">
                                                        <i class="bi bi-trash"></i>                                                        
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
						</tbody>
                    </table>
                <div class="text-center mt-3">
                    <button id="sort-by-date" class="btn btn-primary mr-2">Sort by Date</button>
                    <button id="sort-by-amount" class="btn btn-primary">Sort by Amount</button>
                </div>
                </div>
                <nav aria-label="Page navigation example">

                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">Prev</span>
                            </a>
                        </li>

                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">1</a>
                        </li>
                                            
                        <li class="page-item">
                        	<a class="page-link" href="#">2</a>
                        </li>
                                            
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>

                        <li class="page-item">
                            <a class="page-link" href="#">4</a>
                        </li>
                                            
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">Next</span>
                            </a>
                        </li>
                    </ul>                
                </nav>
			</div>
        </div>																			
</div>
<script>
    // Function to sort table rows by Date
    function sortByDate() {
        var table = document.querySelector('.account-table');
        var tbody = table.querySelector('tbody');
        var rows = Array.from(tbody.querySelectorAll('tr'));

        rows.sort(function (a, b) {
            var dateA = new Date(a.cells[0].textContent);
            var dateB = new Date(b.cells[0].textContent);
            return dateB - dateA;
        });

        tbody.innerHTML = '';
        rows.forEach(function (row) {
            tbody.appendChild(row);
        });
    }

    // Function to sort table rows by Amount
    function sortByAmount() {
        var table = document.querySelector('.account-table');
        var tbody = table.querySelector('tbody');
        var rows = Array.from(tbody.querySelectorAll('tr'));

        rows.sort(function (a, b) {
            var amountA = parseFloat(a.cells[3].textContent.replace('$', '')); // Remove '$' and parse
            var amountB = parseFloat(b.cells[3].textContent.replace('$', '')); // Remove '$' and parse
            return amountB - amountA;
        });

        tbody.innerHTML = '';
        rows.forEach(function (row) {
            tbody.appendChild(row);
        });
    }


    // Example: Sort by Date when a button with id "sort-by-date" is clicked
    document.getElementById('sort-by-date').addEventListener('click', function () {
        sortByDate();
    });

    // Example: Sort by Amount when a button with id "sort-by-amount" is clicked
    document.getElementById('sort-by-amount').addEventListener('click', function () {
        sortByAmount();
    });
</script>

