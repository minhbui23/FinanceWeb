@using Microsoft.AspNetCore.Identity
@using Finance.Models.Models
@model Wallet
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Delete Wallet";
}
<div class="roboto-regular">

    <form method="post" asp-action="Delete">
        <div class="border p-4 mt-4 roboto-regular">
            <div class="row pb-3">
                <h2>Are you want to delete wallet ?</h2>
            </div>
    
            <div class="mb-3 row">
                <label for="Amount" class="col-sm-2 col-form-label fs-5">ID_Card</label>
                <div class="col-sm-10">
                    <input asp-for="ID_Card" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="ID_Card" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label for="Amount" class="col-sm-2 col-form-label fs-5">Balance</label>
                <div class="col-sm-10">
                    <input asp-for="Balance" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="UserId"  value="@UserManager.GetUserId(User)"/>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control ">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-secondary form-control border">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>