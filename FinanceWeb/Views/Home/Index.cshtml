@{
    ViewData["Title"] = "Home Page";
}
<div class="roboto-regular">
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p class="lead">Track your spending with our easy-to-use application.</p>
        </div>
        <div class="card shadow border-0 mt-4 " >

            <div class="card-body" style="height: 700px; display: flex; justify-content: center; align-items: center;">
                <canvas id="myPieChart"></canvas>
            </div>
        </div>


        <div class="card shadow border-0 mt-4 ">
            <div class="card-header  ml-0 py-4" style="background-color: rgb(27, 66, 66);">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="py-2 text-white">Spending History</h2>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <canvas id="myChart" style="height: 500px;"></canvas> <!-- Added inline CSS to increase height -->
            </div>
        </div>
            
    <!-- Include the Chart.js library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Create a canvas element to render the chart -->
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(ViewBag.Labels),
                datasets: [{
                    label: 'Spend by Day',
                    data: @Html.Raw(ViewBag.Data),
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>    

    <!-- Create Pie Chart -->     
    <script>
        var ctx = document.getElementById('myPieChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(ViewBag.Categories),
                datasets: [{
                    label: 'Spend by Category',
                    data: @Html.Raw(ViewBag.Spends),
                    backgroundColor: [
                        'rgba(255, 0, 0, 0.3)',   // Red
                        'rgba(0, 255, 0, 0.3)',   // Green
                        'rgba(0, 0, 255, 0.3)',   // Blue
                        'rgba(255, 255, 0, 0.3)', // Yellow
                        'rgba(0, 255, 255, 0.3)', // Cyan
                        'rgba(255, 0, 255, 0.3)'  // Magenta
                    ],
                    borderColor: [
                        'rgba(255, 0, 0, 1)',   // Red
                        'rgba(0, 255, 0, 1)',   // Green
                        'rgba(0, 0, 255, 1)',   // Blue
                        'rgba(255, 255, 0, 1)', // Yellow
                        'rgba(0, 255, 255, 1)', // Cyan
                        'rgba(255, 0, 255, 1)'  // Magenta
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Spending by Category'
                        }
                    }
                }
        }); 
    </script>                     
</div>